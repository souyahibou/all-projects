/* mainly uses for link and title for markdown complement */
.container a{
  align-items: center;

  cursor: pointer;
  background-color: turquoise;
  display: inline-flex;

  justify-content: center;

  border-style: solid;
  border-width: 1px;
  border-color: rgba(0, 0, 0, 0);
  border-radius: 4px;

  height: 36px;
  margin-bottom: 8px;  margin-right: 8px;
  padding-bottom: 5px;  padding-left: 12px;  padding-right: 12px;  padding-top: 5px;

  opacity: 0.8;
  }

.container a:hover {
 background-color: whitesmoke;
 border-color: #b5b5b5;
 z-index: 2;
 opacity: 1;
}


h1, h2, h3, h4, h5, h6 {
margin: 0; padding: 0;
color: #363636; font-weight: 600; line-height: 1.125;
}

.container h1 {font-size: 2em; margin-bottom: 0.5em;}
.container h1:not(:first-child) {margin-top: 1em; }
.container h2 {font-size: 1.75em; margin-bottom: 0.5714em;}
.container h2:not(:first-child) {margin-top: 1.1428em; }
.container h3 {font-size: 1.5em; margin-bottom: 0.6666em;}
.container h3:not(:first-child) {margin-top: 1.3333em; }
.container h4 {font-size: 1.25em; margin-bottom: 0.8em;}
.container h5 {font-size: 1.125em; margin-bottom: 0.8888em;}
.container h6 {font-size: 1em; margin-bottom: 1em;}
